@{
}

@model IEnumerable<FavouriteBooks>;


@foreach (var item in @Model)
{
    <h2>@item.Title</h2>
    <form method="post" asp-action="RemoveFavourite" asp-controller="Home">
        <input name="TitleAuthor" value="@item.TitleAuthor" hidden>
        <button>Remove</button>
    </form>
}